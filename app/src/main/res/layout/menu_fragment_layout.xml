<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/wr_background"
    android:padding="20dp"
    android:gravity="center">
    <!--静音-->
    <TextView
        android:id="@+id/switchMute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:drawableTop="@drawable/webrtc_btn_voice_mute"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="@string/webrtc_chat_mute"
        android:textColor="@android:color/white"
        android:textSize="@dimen/wr_control_text_size"
        android:layout_marginBottom="10dp"/>
    <!--扬声器-->
    <TextView
        android:id="@+id/switchHandsfree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/webrtc_hands_free"
        android:drawablePadding="5dp"
        android:gravity="center_horizontal"
        android:text="@string/webrtc_chat_hands_free"
        android:textColor="@android:color/white"
        android:textSize="@dimen/wr_control_text_size" />
    <!--开启关闭摄像头-->
    <TextView
        android:id="@+id/powerCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:drawableTop="@drawable/webrtc_btn_open_camera"
        android:drawablePadding="5dp"
        android:text="@string/webrtc_open_camera"
        android:textColor="@android:color/white"
        android:textSize="@dimen/wr_control_text_size" />
    <!--切换摄像头-->
    <ImageView
        android:id="@+id/switchCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchMute"
        android:layout_alignStart="@+id/switchMute"
        android:src="@drawable/webrtc_switch_camera"
        android:gravity="center" />
    <!--挂断-->
    <ImageView
        android:id="@+id/hangUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/switchHandsfree"
        android:layout_centerHorizontal="true"
        android:src="@drawable/webrtc_cancel"
        android:gravity="center"/>
</RelativeLayout>
